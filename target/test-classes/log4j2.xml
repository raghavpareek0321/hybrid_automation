<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">

    <!-- Custom properties -->
    <Properties>
        <!-- Logs folder (inside your project root) -->
        <Property name="LOG_DIR">logs</Property>
        <!-- Main log file -->
        <Property name="LOG_FILE_NAME">automation.log</Property>
    </Properties>

    <Appenders>
        <!-- Console output -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss}] [%p] %c{1} - %m%n"/>
        </Console>

        <!-- File logger (writes into logs/automation.log) -->
        <RollingFile name="FileLogger"
                     fileName="${LOG_DIR}/${LOG_FILE_NAME}"
                     filePattern="${LOG_DIR}/automation-%d{yyyy-MM-dd}.log.gz">
            <PatternLayout>
                <Pattern>[%d{yyyy-MM-dd HH:mm:ss}] [%p] %c{1} - %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <!-- Rotate logs daily -->
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <!-- Rotate if file exceeds 10MB -->
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>
        </RollingFile>
    </Appenders>

    <Loggers>
        <!-- Root logger -->
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileLogger"/>
        </Root>

        <!-- Reduce noise from RestAssured & HTTP -->
        <Logger name="io.restassured" level="warn" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <Logger name="org.apache.http" level="warn" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
    </Loggers>
</Configuration>
